            <!--</FrameLayout>-->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnNext"
                android:background="@drawable/btn_forward"
                android:layout_gravity="center" />

        </LinearLayout>

</RelativeLayout>